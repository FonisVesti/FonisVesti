<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vesti.fonis.fonisvesti">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewsActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.NewsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".AboutActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MSDNAAActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.MSDNAAActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ProjectsActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.ProjectsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PreferencesActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.PreferencesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".NewsViewActivity">
            <intent-filter>
                <action android:name="com.vesti.fonis.fonisvesti.NewsViewActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".NewsDownloaderService" />

        <activity android:name=".MSDNAASumbitActivity"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>