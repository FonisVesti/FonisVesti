<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/ivProjectImage"
            android:background="@drawable/projects_background"
            android:layout_marginTop="@dimen/onepieceofnews_top_margin"
            android:padding="1dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/projects_background"
            android:layout_marginTop="@dimen/onepieceofnews_top_margin"
            android:padding="5dp">

            <TextView
                style="@style/ProjectsFormTextOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DULEEEEE"
                android:id="@+id/tvProjectTittle"
                android:textSize="?attr/font_large" />

        </LinearLayout>
    </LinearLayout>
