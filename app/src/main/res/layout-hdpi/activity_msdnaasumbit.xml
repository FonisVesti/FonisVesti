<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.vesti.fonis.fonisvesti.MSDNAASumbitActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/msdnaa" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnRegAcc"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="Da bi registrovali svoj msdnaa nalog potrebno je da popunite formu i pošaljete fotografiju prve strane indeksa."
            android:textColor="@color/main_button_text"
            android:textSize="14dp" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MsdnaaInputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_people" />

            <EditText
                android:id="@+id/textView9"
                style="@style/MsdnaaInputFormText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Radovan Ristovic" />
        </LinearLayout>

        <LinearLayout
            style="@style/MsdnaaInputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_agenda" />

            <EditText
                android:id="@+id/textView10"
                style="@style/MsdnaaInputFormText"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            style="@style/MsdnaaInputForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/textView11"
                style="@style/MsdnaaInputFormText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlBottomButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSend"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center_horizontal">


            <ImageButton
                android:id="@+id/btnFromCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnUploadPic"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/msdnaa_b_camera"
                android:layout_weight="3"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnUploadPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/msdnaa_b_uploadpic"
                android:layout_weight="2" />

            <ImageButton
                android:id="@+id/btnFromGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btnUploadPic"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/msdnaa_b_gallery"
                android:layout_weight="3"
                android:visibility="invisible" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            style="@style/ButtonLongStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="POŠALJI" />

    </RelativeLayout>
</LinearLayout>
